@model Employee
@{
    ViewData["Title"] = "Details";
}

<div class="card border-primary mb-3 card text-center">
    <h1>Employee Details</h1>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Email</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Age : @(Model.age) Years Old</li>
        <li class="list-group-item">Address : @Model.Address</li>
        <li class="list-group-item">Salary : @Model.Salary</li>
        @if(Model.Office_Id > 0)
        {
            <li class="list-group-item">Office : @Model.Office.Name</li>
        }
    </ul>
    <div class="card-body">
        <a href="/Employee/index" class="btn btn-outline-primary">Back to list</a>
    </div>
</div>